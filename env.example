# API Keys
# Required: API keys for publishing platforms
SUBSTACK_API_KEY=your-substack-api-key  # API key for Substack platform
MEDIUM_API_KEY=your-medium-api-key      # API key for Medium platform

# Security
# Required: Secret key for JWT authentication
SECRET_KEY=your-secret-key              # Used for JWT token generation and validation
REDIS_URL=redis://localhost:6379        # Redis connection URL for rate limiting

# Monitoring
METRICS_PORT=9090                       # Port for Prometheus metrics endpoint

# Image Upload
# Required: URL for image upload service
IMAGE_UPLOAD_URL=https://your-image-service.com/upload  # Endpoint for image upload service

# Content Settings
DEFAULT_LANGUAGE=en                     # Default language for content
SUPPORTED_LANGUAGES=en,es,fr           # Comma-separated list of supported languages
MIN_CONTENT_LENGTH=50                   # Minimum content length in characters
MAX_TITLE_LENGTH=100                    # Maximum title length in characters
MAX_SUBTITLE_LENGTH=200                 # Maximum subtitle length in characters
MAX_TAGS=5                              # Maximum number of tags allowed

# Medium API Settings
MEDIUM_API_URL=https://api.medium.com/v1/users/me/publications  # Medium API endpoint

# Rate Limiting
RATE_LIMIT_WINDOW=3600                  # Rate limit window in seconds (1 hour)
RATE_LIMIT_MAX_REQUESTS=10              # Maximum requests allowed per window 